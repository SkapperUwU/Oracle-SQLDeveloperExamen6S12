--Ejercicio 1--
--Tabla alumnos--
CREATE TABLE alumnosTesoem( --creacion de la tabla alumnosTesoem--
    idAlumno NUMBER(6),     --definicion del campo idAlumno con tipo de dato NUMBER (6) para numeros --
    matricula NUMBER(12),   --definicion del campo idAlumno con tipo de dato NUMBER (12) para numeros --
    nombre NVARCHAR2(50),    --definicion del campo matricula con tipo de dato NVARCHAR2 (50) para caracteres alfanumericos--
    apellidoPaterno NVARCHAR2(50),  --definicion del campo matricula con tipo de dato NVARCHAR2 (50) para caracteres alfanumericos--
    apellidoMaterno NVARCHAR2(50),  --definicion del campo matricula con tipo de dato NVARCHAR2 (50) para caracteres alfanumericos--
    carrera NVARCHAR2(50),  --definicion del campo matricula con tipo de dato NVARCHAR2 (50) para caracteres alfanumericos--
    grupo NVARCHAR2(10),    --definicion del campo matricula con tipo de dato NVARCHAR2 (10) para caracteres alfanumericos--
    semestre NUMBER(2),     -definicion del campo idAlumno con tipo de dato NUMBER (2) para numeros --
    edificio NVARCHAR2(3),  --definicion del campo matricula con tipo de dato NVARCHAR2 (3) para caracteres alfanumericos--
    promedio NUMBER(4,2)    -definicion del campo idAlumno con tipo de dato NUMBER (2) para numeros con cifras decimales --
    );

        --Procedimiento Almacenado para insertar datos de los alumnos dl tecnologico--
       --TODOS LOS CAMPOS DEL SIGUIENTE PROCEDIMIENTO ALMCENADO QUE CUENTAN CUN UNA "a" al principio del campo, tiene el significado de "alumno"--
CREATE OR REPLACE PROCEDURE paInsertAlumnos     -- Declaracion o reemplazo en caso de que exista del procedimiento almacenado paInsertAlumno--
    (aId in number default 0 || null,       --Declaracion del parametro de entrada aId de tipo NUMBER con un valor predeterminado de 0--
    aMatricula in number default  0  ,       --Declaracion del parametro de entrada aMatricula de tipo NUMBER con un valor predeterminado de 0--
    aNombre in varchar2 default 'Nombre'  ,     --Declaracion del parametro de entrada aNombre de tipo VARCHAR2 con una cadema prederteminada de 'Nombre'--
    aApellidoPaterno in varchar2 default 'Apellido Paterno' ,
    aApellidoMaterno in varchar2 default 'Apellido Materno' || null,
    aCarrera in varchar2 default 'Carrera' , 
    aGrupo in varchar2 default 'Grupo' ,
    aSemestre in number DEFAULT 0 ,
    aEdificio in varchar2 default '#' ,
    aPromedio in number default 0 ) 
as
begin
    insert into alumnosTesoem values (aId, aMatricula, aNombre, aApellidoPaterno, aApellidoMaterno, aCarrera, aGrupo, aSemestre, aEdificio, aPromedio);
end;

EXECUTE paInsertAlumnos;
EXECUTE paInsertAlumnos (1, 206020047, 'Ariana Estefania', 'Rodriguez', 'Monroy', 'Sistemas', '6S12', 6, 'B', 90.0);

SELECT * FROM alumnosTesoem;

--Tabla de Sistemas TABLA 1 DE LAS CARRERAS --
CREATE TABLE sistemas(
    id NUMBER(6),
    matricula NUMBER(12),
    nombre NVARCHAR2(50),
    apellido NVARCHAR2(100),
    grupo NVARCHAR2(10),
    semestre NUMBER(2),
    edificio NVARCHAR2(3)
);

        --Procedimiento Almacenado para insertar datos de los alumnos de sistemas--
CREATE OR REPLACE PROCEDURE paInsertAlumnosSistemas
    (aIdS in number default 0 || null, 
    aMatriculaS in number default  0  , 
    aNombreS in varchar2 default 'Nombre'  , 
    aApellidoS in varchar2 default 'Apellidos' ,
    aGrupoS in varchar2 default 'Grupo' ,
    semestreS in number default  0,
    aEdificioS in varchar2 default '#') 
as
begin
    insert into sistemas values (aIdS, aMatriculaS, aNombreS, aApellidoS, aGrupoS, semestreS, aEdificioS);
end;

EXECUTE paInsertAlumnosSistemas;
EXECUTE paInsertAlumnosSistemas (1, 206020047, 'Ariana Estefania', 'Rodriguez Monroy', '6S12',6,'B');

SELECT * FROM sistemas;

--Tabla Gastronomia TABLA 2 DE LAS CARRERAS--
